<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/matte_hdpi"
        android:alpha="1">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:src="@drawable/starttext2"

            android:focusable="false"
            android:layout_alignParentEnd="false"
            android:layout_alignParentStart="false"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"/>

        <EditText
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:id="@+id/loguname"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:singleLine="true"
            android:textSize="15sp"
            android:textColor="#ff84887e"
            android:textAlignment="center"
            android:hint="   Username"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="14dp"
            android:background="#ffffffff"/>

        <EditText
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/logpword"
            android:layout_alignParentBottom="false"
            android:layout_alignStart="@+id/loguname"

            android:textSize="15sp"
            android:textColor="#ff000000"
            android:textAlignment="center"
            android:background="#ffffffff"
            android:hint=" *****"
            android:layout_below="@+id/loguname"
            android:layout_marginTop="14dp"
            android:layout_gravity="center_horizontal"/>

        <Button
            android:id="@+id/blogin"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Anmelden ->"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textSize="14sp"
            style= "@style/btnStyleTwitterblue"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="12dp"/>

        <Button
            android:id="@+id/registrierung"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Noch kein Mitglied?"
             android:textSize="14sp"
             style= "@style/btnStyleOrange"
            android:layout_alignParentRight="false"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="false"
            />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hilfe gefÃ¤llig?"
                android:id="@+id/btnhelp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:textSize="16sp"
                android:padding="20dp"
                android:textColor="#fffbfff4"
                android:linksClickable="true"
                android:longClickable="true"
                android:clickable="true"
                android:layout_gravity="right"
                android:textStyle="bold"
                />

        </RelativeLayout>

    </LinearLayout>



