<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/matte_hdpi">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        >


        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="[TP ÜBERSCHRIFT]"
            android:id="@+id/label_zu_trainierende_muskel"
            android:background="@drawable/redbutton"
            android:textAlignment="center"
            android:gravity="center"
            android:textSize="22sp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="false" />


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/label_zu_trainierende_muskel"
            android:id="@+id/fl1"
            android:layout_alignParentStart="false">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Übung    |    Satzzahl"
                android:id="@+id/textView11"
                android:textColor="#ff000000"
                android:layout_gravity="center_horizontal"
                android:textSize="18sp"
                android:textIsSelectable="true"
                android:gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:textStyle="bold"
                android:background="#ffd0d0d0" />
        </FrameLayout>

        <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
                     android:layout_width="match_parent"
            android:layout_height="wrap_content"
                     android:stretchColumns="*"
                     android:id="@+id/tp_tablelayout"
                     android:layout_marginTop="10dp"
                     android:textAlignment="center"

                     android:background="#ff7a9ea7"
                     android:gravity="center_horizontal"
            android:layout_below="@+id/fl1">

        </TableLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/frameLayout"
            android:layout_below="@+id/tp_tablelayout"
            android:layout_above="@+id/frameLayout2"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Hier wird ein Tipp stehen der immer gewechselt wird!"
                android:id="@+id/textView10"
                android:layout_gravity="center_horizontal|bottom"
                android:textStyle="italic"
                android:autoText="false"
                android:textColor="#ffff"
                android:textSize="18sp" />
        </FrameLayout>

        <FrameLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="false"
            android:layout_alignParentStart="false"
            android:layout_alignParentBottom="true"
            android:id="@+id/frameLayout2">

            <at.markushi.ui.CircleButton
                android:layout_width="83dp"
                android:layout_height="74dp"
                android:id="@+id/btn_tfragment_teinheit_fertig"
                app:cb_color="#99CC00"
                app:cb_pressedRingWidth="13dip"
                android:layout_gravity="center_horizontal|bottom"
                android:src="@drawable/ic_action_tick"
                android:padding="18dp"
                android:layout_marginBottom="20dp"/>

        </FrameLayout>

    </RelativeLayout>
</RelativeLayout><!-- From: file:/C:/Users/Muhammed5/Documents/GitHub/GetFIT_Android/SQLiteLogin1/app/src/main/res/layout/fragment_training.xml -->