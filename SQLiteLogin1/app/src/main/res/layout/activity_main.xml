<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#ff446cff"
        android:alpha="1">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView"
                android:src="@drawable/weightlifting"

                android:layout_alignParentTop="true"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:clickable="false">

            <EditText
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:id="@+id/loguname"
                android:background="#fffeffef"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="40dp"
                android:singleLine="true"
                android:textStyle="italic"
                android:textSize="15sp"
                android:textColor="#ff84887e"
                android:textAlignment="center"
                android:hint="Username"/>


            <EditText
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/logpword"
                android:layout_alignParentBottom="true"
                android:layout_alignStart="@+id/loguname"

                android:textSize="15sp"
                android:textColor="#ff000000"
                android:textAlignment="center"
                android:background="#e0edf6ff"
                android:layout_marginBottom="40dp"
                android:editable="false"
                android:hint="Passwort"
                android:textStyle="italic"/>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_horizontal">

            <Button
                android:id="@+id/registrierung"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="REGISTRIERUNG"
                android:layout_alignParentStart="false"
                android:textSize="12sp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                style= "@style/btnStyleOrange"
                />

            <Button
                android:id="@+id/blogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LOGIN"
                android:layout_alignParentTop="false"
                android:layout_alignParentRight="false"
                android:layout_alignParentEnd="false"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_alignParentStart="false"
                android:layout_toRightOf="@+id/registrierung"
                android:textSize="12sp"
                style= "@style/btnStyleTwitterblue"
                />


        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>