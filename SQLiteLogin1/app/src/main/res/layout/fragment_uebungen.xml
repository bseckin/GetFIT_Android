<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="25dp"
                android:gravity="center_horizontal"
                android:paddingLeft="10dp"
                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/brustImageView"
                    android:src="@drawable/brusticon"
                    android:paddingBottom="10dp"
                    android:visibility="visible"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rueckenImageView"
                    android:src="@drawable/untererrueckenicon"
                    android:visibility="visible"
                    android:paddingBottom="10dp"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/obererueckenImageView"
                    android:src="@drawable/obererrueckenicon"
                    android:paddingBottom="10dp"
                    android:visibility="visible"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/beineimageView"
                    android:src="@drawable/beineicon"
                    android:visibility="visible"
                    android:paddingBottom="10dp"/>
            </LinearLayout>
        </FrameLayout>

        <View
            android:layout_height="fill_parent"
            android:background="#669999"
            android:layout_width="5dp"/>

        <ListView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/listViewMain"
            android:layout_weight="5"
            android:layout_marginTop="5dp"
            android:divider="#ffb21200"/>
    </LinearLayout>

    <ImageView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_pages"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="99dp"
        android:id="@+id/imageView3"
        android:visibility="invisible"/>

    <MediaController
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mediaController"/>


</RelativeLayout>
